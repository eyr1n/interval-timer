<?xml version='1.0' encoding='utf-8'?>
<widget id="me.rinrin.interval_timer" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Interval Timer</name>
    <content src="index.html" />

    <platform name="android">
        <preference name="android-minSdkVersion" value="22" />
        <preference name="Orientation" value="portrait" />
        <preference name="BackgroundColor" value="0xff121212"/>
        <preference name="NavigationBarBackgroundColor" value="#000000" />

        <resource-file src="res/values/ic_launcher_background.xml" target="/app/src/main/res/values/ic_launcher_background.xml" />
        <icon background="@color/ic_launcher_background" density="mdpi" foreground="res/drawable/ic_launcher_foreground.xml" src="res/mipmap-mdpi/ic_launcher.png" />
        <icon background="@color/ic_launcher_background" density="hdpi" foreground="res/drawable/ic_launcher_foreground.xml" src="res/mipmap-hdpi/ic_launcher.png" />
        <icon background="@color/ic_launcher_background" density="xhdpi" foreground="res/drawable/ic_launcher_foreground.xml" src="res/mipmap-xhdpi/ic_launcher.png" />
        <icon background="@color/ic_launcher_background" density="xxhdpi" foreground="res/drawable/ic_launcher_foreground.xml" src="res/mipmap-xxhdpi/ic_launcher.png" />
        <icon background="@color/ic_launcher_background" density="xxxhdpi" foreground="res/drawable/ic_launcher_foreground.xml" src="res/mipmap-xxxhdpi/ic_launcher.png" />
    </platform>
</widget>
